<div class="container mt-4">
  
  <div class="row mb-5 pt-3">
    <div class="col-12 d-flex justify-content-center gap-2 flex-wrap">
      <button class="btn btn-outline-primary rounded-pill shadow-sm px-4">הכל</button>
      <button class="btn btn-outline-secondary rounded-pill shadow-sm px-4">מחשבים</button>
      <button class="btn btn-outline-secondary rounded-pill shadow-sm px-4">סמארטפונים</button>
      <button class="btn btn-outline-secondary rounded-pill shadow-sm px-4">אביזרים</button>
    </div>
  </div>

  <div class="row">
    {{#each data}}
    <div class="col-12 mb-4">
      <div class="card shadow-sm border-0" style="border-radius: 15px; overflow: hidden; background: #fff;">
        <div class="row g-0 align-items-center">
          
          <div class="col-md-3 p-4 text-center">
            <img src="/uploads/pics/{{this.picname}}" class="img-fluid" alt="{{this.pname}}" style="max-height: 160px; object-fit: contain;">
          </div>

          <div class="col-md-6 border-start border-end py-3">
            <div class="card-body text-end">
              <h4 class="card-title fw-bold" style="color: #222;">{{this.pname}}</h4>
              <p class="card-text text-muted mb-2">מכירה מיוחדת • אחריות יבואן • משלוח עד הבית</p>
              <div class="d-flex flex-wrap gap-2 justify-content-start mt-3" style="direction: rtl;">
                <span class="badge bg-success-subtle text-success border border-success-secondary">במלאי</span>
                <span class="badge bg-light text-dark border">השוואת מחירים</span>
                <span class="badge bg-light text-dark border">חדש בקטלוג</span>
              </div>
            </div>
          </div>

          <div class="col-md-3 text-center">
            <div class="card-body">
              <div class="text-muted small mb-1">החל מ-</div>
              <h2 class="fw-bold mb-3" style="color: #e43d30;">₪{{this.price}}</h2>
              <a href="#" class="btn btn-warning w-100 py-2 fw-bold shadow-sm" style="border-radius: 8px;">
                 לפרטים וקנייה >
              </a>
              <div class="mt-2 small text-muted">ב-15 חנויות שונות</div>
            </div>
          </div>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>



































