<div class="container py-5 text-end" dir="rtl">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <a href="/" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-right"></i> חזרה לאתר</a>
        <h1 class="fw-bold m-0" style="color: #1a1a1a; border-right: 5px solid #c5a059; padding-right: 15px;">יומן עבודה - רפאל כהן</h1>
    </div>

    <div class="row g-4">
        {{!-- עמודה ימנית: ניהול זמנים --}}
        <div class="col-lg-4">
            
            {{!-- הגדרת שעות פעילות קבועות --}}
            <div class="card shadow-sm border-0 mb-4" style="border-radius: 15px;">
                <div class="card-header bg-secondary text-white p-3" style="border-radius: 15px 15px 0 0;">
                    <h5 class="fw-bold m-0"><i class="bi bi-clock m-1"></i> שעות פעילות קבועות</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/admin/update-working-hours" method="POST">
                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label fw-bold small">שעת פתיחה:</label>
                                <input type="time" name="openTime" value="{{workingHours.open}}" class="form-control" required>
                            </div>
                            <div class="col">
                                <label class="form-label fw-bold small">שעת סגירה:</label>
                                <input type="time" name="closeTime" value="{{workingHours.close}}" class="form-control" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark w-100 fw-bold btn-sm">עדכן שעות קבועות</button>
                    </form>
                    <div class="mt-2 small text-muted text-center">
                        * השעות שיופיעו ללקוחות בבחירת תור
                    </div>
                </div>
            </div>

            {{!-- חסימת טווח שעות או יום שלם --}}
            <div class="card shadow-sm border-0 mb-4" style="border-radius: 15px;">
                <div class="card-header bg-dark text-white p-3" style="border-radius: 15px 15px 0 0;">
                    <h5 class="fw-bold m-0"><i class="bi bi-calendar-x m-1"></i> חסימת זמנים (חופשות/הפסקות)</h5>
                </div>
                <div class="card-body p-4">
                    {{!-- חסימת יום שלם --}}
                    <form action="/admin/toggle-day" method="POST" class="mb-4">
                        <label class="form-label fw-bold">חסימת יום שלם:</label>
                        <div class="input-group">
                            <input type="date" name="date" class="form-control" required>
                            <button type="submit" class="btn btn-primary fw-bold" style="background-color: #c5a059; border: none;">עדכן יום</button>
                        </div>
                    </form>
                    
                    <hr>

                    {{!-- חסימת טווח שעות --}}
                    <form action="/admin/block-range" method="POST" class="mt-4">
                        <label class="form-label fw-bold">חסימת טווח שעות:</label>
                        <input type="date" name="date" class="form-control mb-2" required>
                        <div class="row g-2 mb-3">
                            <div class="col">
                                <input type="time" name="startTime" class="form-control" title="משעה" required>
                            </div>
                            <div class="col">
                                <input type="time" name="endTime" class="form-control" title="עד שעה" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-dark w-100 fw-bold">חסום טווח שעות</button>
                    </form>
                </div>
            </div>

            {{!-- חסימות פעילות --}}
            <div class="card shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-header bg-light p-3" style="border-radius: 15px 15px 0 0;">
                    <h6 class="fw-bold m-0 text-dark">חסימות פעילות:</h6>
                </div>
                <div class="card-body p-0">
                    <div class="overflow-auto" style="max-height: 250px;">
                        <ul class="list-group list-group-flush">
                            {{#each availability}}
                                <li class="list-group-item p-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-bold text-dark">{{this.date}}</span>
                                        {{#if this.isClosed}}
                                            <span class="badge bg-danger">יום סגור</span>
                                        {{/if}}
                                    </div>
                                    {{#if this.closedSlots}}
                                        <div class="d-flex flex-wrap gap-1 mt-2">
                                            {{#each this.closedSlots}}
                                                <span class="badge bg-light text-dark border small">{{this}}</span>
                                            {{/each}}
                                        </div>
                                    {{/if}}
                                </li>
                            {{else}}
                                <li class="list-group-item text-muted text-center p-4">אין חסימות פעילות</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {{!-- עמודה שמאלית: ניהול תורים --}}
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100" style="border-radius: 15px;">
                <div class="card-header bg-dark text-white p-3" style="border-radius: 15px 15px 0 0;">
                    <h5 class="fw-bold m-0"><i class="bi bi-list-stars m-1"></i> תורים מוזמנים</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="p-3">לקוח</th>
                                    <th class="p-3">שירות</th> 
                                    <th class="p-3">תאריך ושעה</th>
                                    <th class="p-3 text-center">פעולות</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each appointments}}
                                <tr>
                                    <td class="p-3">
                                        <div class="fw-bold text-dark">{{this.clientName}}</div>
                                        <small class="text-muted">{{this.clientPhone}}</small>
                                    </td>
                                    <td class="p-3">
                                        <span class="badge rounded-pill bg-warning text-dark px-3 py-2">
                                            {{this.service}}
                                        </span>
                                    </td>
                                    <td class="p-3">
                                        <div class="badge bg-light text-dark border p-2 mb-1 d-block" style="width: fit-content;">
                                            <i class="bi bi-calendar3"></i> {{this.date}}
                                        </div>
                                        <div class="badge bg-dark text-white p-2 d-block" style="width: fit-content;">
                                            <i class="bi bi-clock"></i> {{this.time}}
                                        </div>
                                    </td>
                                    <td class="p-3 text-center">
                                        <div class="d-flex flex-column gap-2">
                                            <div class="d-flex gap-2 justify-content-center">
                                                <button onclick="sendWhatsApp('{{this.clientPhone}}', '{{this.clientName}}', '{{this.service}}', '{{this.date}}', '{{this.time}}', 'approve')" 
                                                        class="btn btn-success btn-sm rounded-pill px-3">
                                                    <i class="bi bi-whatsapp"></i> אישור
                                                </button>
                                                <button onclick="sendWhatsApp('{{this.clientPhone}}', '{{this.clientName}}', '{{this.service}}', '{{this.date}}', '{{this.time}}', 'cancel')" 
                                                        class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                                    <i class="bi bi-x-circle"></i> ביטול
                                                </button>
                                            </div>
                                            <form action="/admin/delete-appointment/{{this._id}}" method="POST" onsubmit="return confirm('האם למחוק סופית את התור?')">
                                                <button type="submit" class="btn btn-dark btn-sm rounded-pill w-100">
                                                    <i class="bi bi-trash"></i> סיום ומחיקה
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="4" class="text-center p-5 text-muted">אין תורים מוזמנים</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function sendWhatsApp(phone, name, service, date, time, type) {
        const cleanPhone = phone.replace(/\D/g, '');
        const finalPhone = cleanPhone.startsWith('0') ? '972' + cleanPhone.substring(1) : cleanPhone;
        let message = type === 'approve' 
            ? `היי ${name}, זה רפאל כהן. אני מאשר את התור שלך ל${service} בתאריך ${date} בשעה ${time}. נתראה!`
            : `היי ${name}, זה רפאל כהן. לצערי אני נאלץ לבטל את התור ל${service} בתאריך ${date} בשעה ${time}. אשמח שנתאם מועד חדש, סליחה.`;
        
        window.open(`https://wa.me/${finalPhone}?text=${encodeURIComponent(message)}`, '_blank');
    }
</script>